---
import '@/assets/styles/text-background.css'

interface Props {
  variant?: 'poem' | 'words'
}

const { variant = 'poem' } = Astro.props as Props

const poemLines = [
  '常闻南华经，巧劳智忧愁',
  '不如无能者，饱食但遨游',
  '自来浔阳郡，四序忽已周',
  '不分物黑白，但与时沉浮',
  '朝餐夕安寝，用是为身谋',
  '此外即闲放，时寻山水幽',
  '常闻南华经，巧劳智忧愁',
  '春游慧远寺，秋上庾公楼',
  '或吟诗一章，或饮茶一瓯',
  '身心一无系，浩浩如虚舟',
  '富贵亦有苦，苦在心危忧',
  '贫贱亦有乐，乐在身自由'
]

const wordLines = ['富强 民主 文明 和谐', '自由 平等 公正 法治', '爱国 敬业 诚信 友善']

const lines = variant === 'poem' ? poemLines : wordLines
const className = variant === 'poem' ? 'poem-background' : 'words-background'
---

<div class={className}>
  {lines.map((line) => <p>{line}</p>)}
</div>
